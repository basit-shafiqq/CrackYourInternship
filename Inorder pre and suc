class Solution {
    public static void findPreSuc(Node root, Node[] pre, Node[] suc, int key) {
        // code here.
        // update pre[0] with the predecessor of the key
        // update suc[0] with the successor of the key
        if (root == null) return;

        if (root.data == key) {
            if (root.left != null) {
                Node tmp = root.left;
                while (tmp.right != null) {
                    tmp = tmp.right;
                }
                pre[0] = tmp;
            }

            if (root.right != null) {
                Node tmp = root.right;
                while (tmp.left != null) {
                    tmp = tmp.left;
                }
                suc[0] = tmp;
            }
            return;
        }

        if (root.data > key) {
            suc[0] = root;
            findPreSuc(root.left, pre, suc, key);
        } else {
            pre[0] = root;
            findPreSuc(root.right, pre, suc, key);
        }

        
        
    }
}
